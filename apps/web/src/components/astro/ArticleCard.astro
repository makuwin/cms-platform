---
import type { ArticleSummary } from '@lib/api';

type Props = {
  article: ArticleSummary;
};

const { article } = Astro.props as Props;
const formattedDate = article.publishedAt
  ? new Date(article.publishedAt).toLocaleDateString()
  : 'Draft';
---

<article class="group rounded-xl border border-white/10 bg-neutral-900/60 p-6 transition hover:border-primary-500 hover:shadow-lg hover:shadow-primary-500/20">
  <header class="mb-4 flex items-start justify-between gap-4">
    <h2 class="text-xl font-semibold text-neutral-50">
      <a href={`/blog/${article.slug}`} class="hover:text-primary-300">
        {article.title}
      </a>
    </h2>
    <span class="text-xs uppercase tracking-wide text-neutral-400">
      {formattedDate}
    </span>
  </header>
  <p class="line-clamp-3 text-sm text-neutral-300">
    {article.excerpt ?? 'Stay tuned for the full article coming soon.'}
  </p>
  <footer class="mt-5 flex items-center justify-between text-sm text-primary-300">
    <span>Read more</span>
    <span aria-hidden="true" class="transition group-hover:translate-x-1">
      â†’
    </span>
  </footer>
</article>
