---
import SearchBar from '../islands/SearchBar.tsx';
import UserMenu from '../islands/UserMenu.tsx';

const { title = 'CMS Platform' } = Astro.props;
---

<header class="sticky top-0 z-50 border-b border-white/10 bg-neutral-950/80 backdrop-blur-sm">
  <div class="mx-auto flex max-w-6xl items-center justify-between gap-4 px-6 py-4">
    <a href="/" class="text-lg font-semibold text-primary-300">
      {title}
    </a>
    <nav class="hidden items-center gap-6 text-sm font-medium text-neutral-200 md:flex">
      <a class="hover:text-primary-300" href="/blog">Blog</a>
      <a class="hover:text-primary-300" href="/dashboard">Dashboard</a>
      <a class="hover:text-primary-300" href="/about">About</a>
    </nav>
    <div class="flex items-center gap-3">
      <SearchBar client:media="(min-width: 768px)" />
      <UserMenu client:idle />
    </div>
  </div>
</header>
