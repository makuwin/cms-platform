---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
];

const apiBase =
  import.meta.env.PUBLIC_API_BASE_URL ?? 'http://localhost:3000';
---

<header class="site-header">
  <nav class="nav">
    <div class="brand">
      <a href="/">NovaCMS</a>
    </div>
    <div class="nav-right">
      <ul class="nav-list">
        {
          navItems.map((item) => (
            <li>
              <a href={item.href}>{item.label}</a>
            </li>
          ))
        }
      </ul>
      <div class="divider" aria-hidden="true" data-auth-divider hidden></div>
      <button
        class="sign-out"
        type="button"
        data-sign-out
        data-api-base={apiBase}
        hidden
      >
        Sign Out
      </button>
    </div>
  </nav>
</header>

<style>
  .site-header {
    padding: 1.5rem 0;
    border-bottom: 1px solid #e2e8f0;
    background: #ffffffcc;
    backdrop-filter: blur(6px);
  }

  .nav {
    margin: 0 auto;
    max-width: 960px;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .brand a {
    font-size: 1.5rem;
    font-weight: 700;
    color: #111827;
    text-decoration: none;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  .nav-list {
    list-style: none;
    display: flex;
    gap: 1.5rem;
    margin: 0;
    padding: 0;
  }

  .nav-list a {
    color: #1f2937;
    text-decoration: none;
    font-weight: 500;
  }

  .nav-list a:hover {
    color: #6366f1;
  }

  .divider {
    width: 1px;
    height: 24px;
    background: #cbd5f5;
  }

  .sign-out {
    border: none;
    background: transparent;
    color: #ef4444;
    font-weight: 600;
    cursor: pointer;
    padding: 0.5rem 0;
    transition: color 0.2s ease;
  }

  .sign-out:hover {
    color: #dc2626;
  }

  @media (max-width: 600px) {
    .nav {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-right {
      flex-direction: column;
      gap: 0.75rem;
    }

    .divider {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const signOutBtn = document.querySelector('[data-sign-out]');
    const divider = document.querySelector('[data-auth-divider]');
    if (!(signOutBtn instanceof HTMLElement) || !(divider instanceof HTMLElement)) {
      return;
    }

    const stored = localStorage.getItem('novaCmsAuth');
    const isSignedIn = Boolean(stored);
    signOutBtn.hidden = !isSignedIn;
    divider.hidden = !isSignedIn;

    if (!isSignedIn) return;

    const apiBase =
      signOutBtn.getAttribute('data-api-base') ?? 'http://localhost:3000';

    signOutBtn.addEventListener('click', async () => {
      try {
        (signOutBtn as HTMLButtonElement).disabled = true;
        await fetch(apiBase.replace(/\/$/, '') + '/api/auth/logout', {
          method: 'POST',
          credentials: 'include',
        });
      } catch (error) {
        console.error('Sign out failed', error);
      } finally {
        localStorage.removeItem('novaCmsAuth');
        window.location.href = '/sign-in';
      }
    });
  });
</script>
