<a class="sign-in-floating" href="/sign-in" aria-label="Go to sign in" data-auth-button>
  <svg
    aria-hidden="true"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    width="24"
    height="24"
    stroke-width="1.8"
    stroke="currentColor"
    fill="none"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M15.75 7.5a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z"
    />
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M4.5 20.25a7.5 7.5 0 0 1 15 0"
    />
  </svg>
  <span>Sign In</span>
</a>

<style>
  .sign-in-floating {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    background: #111827;
    color: #f9fafb;
    padding: 0.85rem 1.35rem;
    border-radius: 999px;
    box-shadow: 0 12px 30px rgba(15, 23, 42, 0.25);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    font-weight: 600;
    text-decoration: none;
  }

  .sign-in-floating:hover {
    transform: translateY(-2px);
    box-shadow: 0 16px 36px rgba(15, 23, 42, 0.28);
  }

  @media (max-width: 640px) {
    .sign-in-floating {
      bottom: 1.25rem;
      right: 1.25rem;
      padding: 0.75rem 1.1rem;
    }

    .sign-in-floating span {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.querySelector('[data-auth-button]');
    if (!button) return;

    const raw = localStorage.getItem('novaCmsAuth');
    if (!raw) return;

    try {
      const stored = JSON.parse(raw);
      if (!stored || !stored.user) return;
      button.setAttribute('href', '/dashboard');
      button.setAttribute('aria-label', 'Go to dashboard');
      const label = button.querySelector('span');
      if (label) label.textContent = 'Dashboard';
    } catch {
      // ignore parse errors
    }
  });
</script>
