    line-height: 1.7;
  }

  .placeholder {
    display: grid;
    gap: 1.75rem;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .card {
    background: #ffffff;
    border-radius: 1.25rem;
    padding: 1.75rem;
    box-shadow: 0 24px 45px rgba(15, 23, 42, 0.12);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .card h2 {
    margin: 0;
    font-size: 1.35rem;
  }

  .card p {
    margin: 0;
    color: #475569;
    line-height: 1.6;
  }
</style>
