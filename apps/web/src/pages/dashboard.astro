<style>
  :global(body) {
    margin: 0;
    font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    color: #1f2937;
    background: #f8fafc;
  }

  .dashboard {
    max-width: 980px;
    margin: 0 auto;
    padding: 3rem 1.5rem 4rem;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .welcome h1 {
    margin: 0 0 0.75rem;
    font-size: clamp(2.2rem, 4vw, 3rem);
  }

  .welcome p {
    margin: 0;
