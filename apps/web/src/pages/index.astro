<style>
  :global(body) {
    margin: 0;
    font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    color: #1f2937;
    background: #f8fafc;
  }

  main {
    max-width: 960px;
    margin: 0 auto;
    padding: 3rem 1.5rem 0;
  }

  .hero {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    align-items: center;
    gap: 2.5rem;
  }

  .hero h1 {
    font-size: clamp(2.5rem, 4vw, 3rem);
    margin-bottom: 1rem;
  }

  .hero p {
    margin: 0 0 1.5rem;
    color: #4b5563;
    line-height: 1.7;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .hero-image img {
    width: 100%;
    border-radius: 0.75rem;
    box-shadow: 0 20px 45px rgba(15, 23, 42, 0.15);
  }

  .features {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    margin: 4rem 0 0;
  }

  .feature-card {
    background: #ffffff;
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: 0 10px 25px rgba(15, 23, 42, 0.08);
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .feature-card img {
    width: 100%;
    border-radius: 0.75rem;
  }

  .feature-card h2 {
    margin: 0;
    font-size: 1.4rem;
  }

  .feature-card p {
    margin: 0;
    color: #4b5563;
    line-height: 1.6;
  }

  .cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 999px;
    padding: 0.75rem 1.75rem;
    font-weight: 600;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .cta.primary {
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    color: #ffffff;
    box-shadow: 0 10px 20px rgba(99, 102, 241, 0.35);
  }

  .cta.primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 16px 25px rgba(99, 102, 241, 0.35);
  }

  .cta.secondary {
    background: #e0e7ff;
    color: #4338ca;
  }

  .cta.secondary:hover {
    transform: translateY(-1px);
    box-shadow: 0 10px 20px rgba(67, 56, 202, 0.15);
  }

  .cta-banner {
    margin: 4.5rem 0;
    background: linear-gradient(135deg, #1d4ed8, #2563eb);
    color: #f8fafc;
    border-radius: 1.25rem;
    padding: 2.5rem;
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    align-items: center;
    justify-content: space-between;
  }

  .cta-banner h2 {
    margin: 0 0 0.5rem;
    font-size: clamp(1.75rem, 3vw, 2.25rem);
  }

  .cta-banner p {
    margin: 0;
    color: #dbeafe;
    line-height: 1.6;
  }

  @media (max-width: 600px) {
    main {
      padding-top: 2rem;
    }
  }
</style>
