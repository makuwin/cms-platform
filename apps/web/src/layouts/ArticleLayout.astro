---
import BaseLayout from './BaseLayout.astro';

type Props = {
  title: string;
  description?: string;
};

const { title, description } = Astro.props as Props;
---

<BaseLayout title={title} description={description}>
  <section class="mx-auto w-full max-w-3xl space-y-8">
    <slot />
  </section>
</BaseLayout>
